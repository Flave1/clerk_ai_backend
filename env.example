# AI Receptionist Environment Configuration

# Application Settings
APP_VERSION=1.0.0
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
RT_GATEWAY_HOST=0.0.0.0
RT_GATEWAY_PORT=8001

# API Configuration
API_PREFIX=/api/v1

# AWS Configuration (Optional - for production)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=clerk_
CONVERSATIONS_TABLE=conversations
TURNS_TABLE=turns
ACTIONS_TABLE=actions
USERS_TABLE=users

# SQS/SNS Configuration (Optional)
SQS_QUEUE_PREFIX=clerk_
ACTIONS_QUEUE=actions
SNS_TOPIC_PREFIX=clerk_
EVENTS_TOPIC=events

# AI Service Configuration
# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic (Alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Speech Services
# Whisper (via OpenAI)
WHISPER_MODEL=base

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# AWS Polly TTS (Alternative to ElevenLabs)
AWS_POLLY_VOICE_ID=Joanna

# LiveKit Configuration (for real-time audio/video)
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
LIVEKIT_VOICE_WEBHOOK_SECRET=
PHONE_NUMBER=+1234567890
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok-free.dev

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# External Integrations
# Google Calendar (OAuth - replace with path to your OAuth client credentials JSON)
GOOGLE_OAUTH_CLIENT_CONFIG=services/workers/tools/properties/clerk_demo_calender_secrets.json

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your_slack_bot_token_here

# Fireflies.ai (Meeting Bot Service)
# Get your API key from https://app.fireflies.ai/integrations/custom/fireflies-api
FIREFLIES_API_KEY=your_fireflies_api_key_here

# Recall.ai (Meeting Bot Service - RECOMMENDED)
# Get your API key from https://recall.ai/dashboard
RECALL_API_KEY=your_recall_api_key_here

# Meeting Agent OAuth Credentials
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Zoom OAuth
ZOOM_ACCOUNT_ID=your_zoom_account_id_here
ZOOM_CLIENT_ID=your_zoom_client_id_here
ZOOM_CLIENT_SECRET=your_zoom_client_secret_here
ZOOM_REDIRECT_URI=http://localhost:8000/auth/zoom/callback
#ZOOM_ACCESS_TOKEN=
#ZOOM_REFRESH_TOKEN=
#ZOOM_ACCOUNT_ID=

# Microsoft Graph
MS_CLIENT_ID=your_microsoft_client_id_here
MS_CLIENT_SECRET=your_microsoft_client_secret_here
MS_TENANT_ID=your_microsoft_tenant_id_here

# Meeting Agent Configuration
AI_EMAIL=your_ai_email@yourdomain.com
MEETING_AUTO_JOIN_ENABLED=true
MEETING_JOIN_BUFFER_MINUTES=5
MEETING_MAX_JOIN_ATTEMPTS=3
MEETING_TRANSCRIPTION_ENABLED=true
MEETING_SUMMARIZATION_ENABLED=true
MEETING_EMAIL_NOTIFICATIONS_ENABLED=true
MEETING_SLACK_NOTIFICATIONS_ENABLED=true


# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_smtp_password_here


# Security
SECRET_KEY=your-secret-key-for-jwt-tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

TEAMS_TEST_MODE=true

