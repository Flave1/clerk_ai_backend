# Environment Configuration

# Application Settings
APP_VERSION=1.0.0
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
RT_GATEWAY_HOST=0.0.0.0
RT_GATEWAY_PORT=8001

# API Configuration
API_PREFIX=/api/v1

# CORS Configuration
ALLOWED_CORS_ORIGINS=https://auray.net,https://www.auray.net,https://localhost:3443,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# AWS Configuration (Optional - for production)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1


# AI Service Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Alternative to OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key


# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# External Integrations
# Google Calendar (OAuth - replace with path to your OAuth client credentials JSON)
GOOGLE_OAUTH_CLIENT_CONFIG=google_secrets.json

# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret


# Meeting Agent OAuth Credentials
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Zoom OAuth
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret

# Microsoft Graph
MS_CLIENT_ID=your-ms-client-id
MS_CLIENT_SECRET=your-ms-client-secret
MS_TENANT_ID=your-ms-tenant-id


SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password


# Security
SECRET_KEY=your-secret-key-for-jwt-tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

TEAMS_TEST_MODE=true

# Browser-Use Configuration
BROWSER_USE_API_KEY=your-browser-use-api-key

DEEPGRAM_API_KEY=your-deepgram-api-key


AURRAY_API_KEY=your-aurray-api-key

API_BASE_URL=http://localhost:8000